<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieDatabase" parent="ThemeOverlay.MaterialComponents.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/very_dark_blue</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
        <item name="colorAccent">@color/light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/less_light_blue</item>
        <item name="colorOnSecondary">@color/gray_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorOnPrimary</item>
        <item name="android:colorForeground">?attr/colorAccent</item>
        <item name="android:colorForegroundInverse">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">?attr/colorOnPrimary</item>

        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorPrimaryDisableOnly">@color/primary_text_color</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- No action bar theme. -->
    <style name="Theme.MovieDatabase.NoActionBar" parent="Theme.MovieDatabase">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!--Button styles-->
    <style name="BlueRoundedCornerButton"
        parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/radio_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteBorderRoundedButton"
        parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/white_border_radio_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <!--EditText styles-->
    <style name="WhiteBorderRoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/white_border_radio_edittext_states</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
    </style>

    <!--Text appearances-->
    <style name="TextHeaderL" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeaderM" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/gray_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemInfoTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>