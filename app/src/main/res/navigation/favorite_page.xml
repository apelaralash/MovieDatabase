<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorite_page"
    app:startDestination="@id/favoriteFragment">

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.myapplication.ui.fragments.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_itemInfoFragment2"
            app:destination="@id/itemInfoFragment2" />
    </fragment>
    <fragment
        android:id="@+id/itemInfoFragment2"
        android:name="com.example.myapplication.ui.fragments.ItemInfoFragment"
        android:label="fragment_item_info"
        tools:layout="@layout/fragment_item_info" >
        <argument
            android:name="id"
            app:argType="long" />
        <argument
            android:name="type"
            app:argType="integer" />
        <argument
            android:name="season"
            app:argType="integer" />
        <argument
            android:name="episode"
            app:argType="integer" />
        <action
            android:id="@+id/action_itemInfoFragment_self"
            app:destination="@id/itemInfoFragment2" />
    </fragment>
</navigation>