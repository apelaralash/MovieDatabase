<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.SingUpActivity"
    android:background="@color/dark_blue">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_begin="64dp"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_end="64dp"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_begin="32dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_end="32dp"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo1"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constraintTop_toTopOf="@id/top_line"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/imageLogo"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        android:layout_marginTop="16dp"
        app:layout_constrainedWidth="true"
        android:hint="Имя"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_style"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:maxLength="30"/>

    <EditText
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        android:layout_marginTop="16dp"
        app:layout_constrainedWidth="true"
        android:hint="Фамилия"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_style"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:maxLength="30"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/surname"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        android:layout_marginTop="16dp"
        app:layout_constrainedWidth="true"
        android:hint="E-mail"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_style"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:maxLength="30"/>

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        android:layout_marginTop="16dp"
        app:layout_constrainedWidth="true"
        android:hint="Пароль"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_style"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:maxLength="30"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/repass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/pass"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        android:layout_marginTop="16dp"
        app:layout_constrainedWidth="true"
        android:hint="Повторите пароль"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_text_style"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:maxLength="30"
        android:inputType="textPassword"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="У меня есть аккаунт"
        app:layout_constraintBottom_toTopOf="@id/enter"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constrainedWidth="true"
        android:layout_marginBottom="16dp"
        style="@style/GreenRoundedCornerButton"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/proof"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Зарегистрироваться"
        app:layout_constraintBottom_toTopOf="@+id/bottom_line"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constrainedWidth="true"
        style="@style/RoundedCornerButton"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Зарегистрироваться"
        app:layout_constraintBottom_toTopOf="@+id/bottom_line"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constrainedWidth="true"
        style="@style/RoundedCornerButton"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>