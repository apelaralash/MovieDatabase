<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.SingInActivity"
    android:background="@color/dark_blue">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_begin="100dp"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_begin="32dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_end="32dp"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="205dp"
        android:layout_height="147dp"
        android:src="@drawable/ic_squered_logo"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constraintTop_toTopOf="@id/top_line"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"/>
    
    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/imageLogo"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        android:layout_marginTop="56dp"
        app:layout_constrainedWidth="true"
        android:hint="Логин"
        style="@style/WhiteBorderRoundedEditText"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        android:layout_marginTop="16dp"
        app:layout_constrainedWidth="true"
        android:hint="Пароль"
        style="@style/WhiteBorderRoundedEditText"
        android:inputType="textPassword"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/to_sign_up"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Регистрация"
        app:layout_constraintTop_toBottomOf="@id/sign_in"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constrainedWidth="true"
        android:layout_marginTop="16dp"
        style="@style/WhiteBorderRoundedButton"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Войти"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constrainedWidth="true"
        android:layout_marginTop="128dp"
        style="@style/BlueRoundedCornerButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>