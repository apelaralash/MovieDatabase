<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/popular_movies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/in_trend_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextHeaderL"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/movies_subtitle"
            android:textAppearance="@style/TextHeaderM"
            app:layout_constraintBottom_toBottomOf="@id/popular_movies_title"
            app:layout_constraintStart_toEndOf="@id/popular_movies_title"
            app:layout_constraintTop_toTopOf="@+id/popular_movies_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popular_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_poster"
            android:layout_marginTop="16dp"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/popular_movies_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/popular_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_trend_title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:textAppearance="@style/TextHeaderL"
            app:layout_constraintTop_toBottomOf="@id/popular_movies"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/tvs_subtitle"
            android:textAppearance="@style/TextHeaderM"
            app:layout_constraintBottom_toBottomOf="@id/popular_tv_title"
            app:layout_constraintStart_toEndOf="@id/popular_tv_title"
            app:layout_constraintTop_toTopOf="@+id/popular_tv_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popular_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_backdrop_title"
            android:layout_marginTop="16dp"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/popular_tv_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/now_playing_movies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/now_watching_title"
            android:textAppearance="@style/TextHeaderL"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/popular_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/movies_subtitle"
            android:textAppearance="@style/TextHeaderM"
            app:layout_constraintBottom_toBottomOf="@id/now_playing_movies_title"
            app:layout_constraintStart_toEndOf="@id/now_playing_movies_title"
            app:layout_constraintTop_toTopOf="@+id/now_playing_movies_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/now_playing_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_poster"
            android:layout_marginTop="16dp"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/now_playing_movies_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/upcoming_movies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soon_title"
            android:textAppearance="@style/TextHeaderL"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/now_playing_movies"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/movies_subtitle"
            android:textAppearance="@style/TextHeaderM"
            app:layout_constraintBottom_toBottomOf="@id/upcoming_movies_title"
            app:layout_constraintStart_toEndOf="@id/upcoming_movies_title"
            app:layout_constraintTop_toTopOf="@+id/upcoming_movies_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upcoming_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_poster"
            android:layout_marginTop="16dp"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/upcoming_movies_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/popular_persons_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popular_actors_title"
            android:textAppearance="@style/TextHeaderL"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/upcoming_movies"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popular_persons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_person"
            android:layout_marginTop="16dp"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/popular_persons_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/top_rated_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/the_best_title"
            android:textAppearance="@style/TextHeaderL"
            app:layout_constraintTop_toBottomOf="@id/popular_persons"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/tvs_subtitle"
            android:textAppearance="@style/TextHeaderM"
            app:layout_constraintBottom_toBottomOf="@id/top_rated_tv_title"
            app:layout_constraintStart_toEndOf="@id/top_rated_tv_title"
            app:layout_constraintTop_toTopOf="@+id/top_rated_tv_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_rated_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_backdrop_title"
            android:layout_marginTop="16dp"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/top_rated_tv_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/on_air_today_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_on_air"
            android:textAppearance="@style/TextHeaderL"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/top_rated_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/tvs_subtitle"
            android:textAppearance="@style/TextHeaderM"
            app:layout_constraintBottom_toBottomOf="@id/on_air_today_tv_title"
            app:layout_constraintStart_toEndOf="@id/on_air_today_tv_title"
            app:layout_constraintTop_toTopOf="@+id/on_air_today_tv_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/on_air_today_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_backdrop_title"
            android:layout_marginTop="16dp"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/on_air_today_tv_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/top_rated_movies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/the_best_title"
            android:textAppearance="@style/TextHeaderL"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/on_air_today_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/movies_subtitle"
            android:textAppearance="@style/TextHeaderM"
            app:layout_constraintBottom_toBottomOf="@id/top_rated_movies_title"
            app:layout_constraintStart_toEndOf="@id/top_rated_movies_title"
            app:layout_constraintTop_toTopOf="@+id/top_rated_movies_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_rated_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_poster"
            android:layout_marginTop="16dp"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/top_rated_movies_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/now_on_air_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/now_on_air_title"
            android:textAppearance="@style/TextHeaderL"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/top_rated_movies"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/tvs_subtitle"
            android:textAppearance="@style/TextHeaderM"
            app:layout_constraintBottom_toBottomOf="@id/now_on_air_tv_title"
            app:layout_constraintStart_toEndOf="@id/now_on_air_tv_title"
            app:layout_constraintTop_toTopOf="@+id/now_on_air_tv_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/now_on_air_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_backdrop_title"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/now_on_air_tv_title"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>